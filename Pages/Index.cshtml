@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h2>Long HTML Table Example</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample data rows -->
            <!-- You can duplicate or generate more rows as needed -->
            @{for (int i = 1; i <= 100; i++) {
                <tr>
                    <td>@i</td>
                    <td>Person @i</td>
                    <td>person+@i@@example.com</td>
                    <td>(123) 456-78 @i % 10} @i % 10}</td>
                    <td>@i Example Street, City</td>
                </tr>
            }}
        </tbody>
    </table>
</div>
