@model SweetDebt.Models.MyTransaction

<div class="model-backdrop"> @*AI added design*@
    <div class="model-content"> @*AI added design*@
        <h2>Add New Transaction</h2>
        <form method="post" asp-page-handler="AddTransactionSave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Description">Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Amount">Amount:</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="TypeOfTransaction">Type of transaction:</label>
                <select asp-for="TypeOfTransaction" class="form-control">
                    <option value="Negative">Negative</option>
                    <option value="Positive">Positive</option>
                </select>
                <span asp-validation-for="TypeOfTransaction" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-secondary">Save</button>
            <a asp-page-handler="AddTransactionClose" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}